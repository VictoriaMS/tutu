<%= form_with url: update_departure_time_railway_station_path(station), method: :patch do |f| %>
  <%= f.datetime_field :departure_time, value: station.departure_time(route).try(:strftime, '%Y-%m-%dT%H:%M:%S') %>
  <%= f.hidden_field  :route_id, value: route.id %>
  <%= f.submit 'Update' %>
<% end %>