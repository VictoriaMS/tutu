<table>
  <thead>
    <tr>
      <th>Title route</th>
      <th>Depurture time</th>
      <th>Arrival time</th>
    </tr>
  </thead>
  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= route.departure_time_first_station || 'Time not set' %></td>
        <td><%= route.arrival_time_last_station || 'Time not set' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
