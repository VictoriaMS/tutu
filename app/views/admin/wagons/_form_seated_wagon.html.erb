<%= form_with(model: [:admin, wagon.train, wagon], local: true, html: {style: "display: #{hidden ? 'none' : 'block'}"}, id: 'seated_wagon', class: 'form') do |form| %>
  <%= render 'shared/errors', resource: wagon %>
  <%= form.hidden_field :type, value: 'SeatedWagon' %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number %>
  </div>
  
  <div class="field">
    <%= form.label :seat_places %>
    <%= form.number_field :seat_places %>
  </div>  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
